#!/usr/bin/python3
"""
   This module contains a function which returns a list of integers
   representing Pascal's triangle of n.
"""


def pascal_triangle(n):
    """Returns Pascal's triangle of n"""
    triangle = []
    row = 1
    while row < n:
        for elem in range(row + 1):
            if elem == 0 or elem == row - 1:
                triangle[elem].append([1])
            elif elem < row // 2:
                triangle[elem].append(triangle[row - 1][elem - 1] + triangle[row - 1][elem])
        row += 1
    return triangle
